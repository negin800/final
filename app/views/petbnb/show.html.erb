<center>
    <h1>Leave your pet to an amazing host or become an amazing pet host</h1>
    <form action="/petbnb/show" class='col-sm-5'>
        <input class="form-control" type="text" name="search" placeholder="Search postings..." required>
        <button class="btn btn-primary">Submit</button>
    </form>
    <hr>
    <h3>Results</h3>
    <p><b>Search term: </b> <%= params["search"] %></p>
</center>
<ul>
  <% for posting in Posting.all %>
    <% if posting.title.include? params["search"] or
          posting.location.include? params["search"] %>
        <li>
          <a href="/postings/<%= posting.id %>">
              <%= posting.title %> [<%= posting.location %>]
          </a>
          <% if posting.host_id == session["host_id"] %>
          <a href="/postings/<%= posting.id %>/delete">[delete]</a>
          <% end %>
        </li>
    <% end %>
  <% end %>
</ul>